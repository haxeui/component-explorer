<?xml version="1.0" encoding="utf-8" ?>
<module preload="all" preloader="custom.Preloader">
    <resources>
        <resource path="assets/css" prefix="css" />
        <resource path="assets/icons" prefix="icons" />
        <resource path="assets/images" prefix="images" />
        <resource path="assets/images/people" prefix="people" />
        <resource path="assets/views" prefix="views" />
        <resource path="assets/fonts" prefix="fonts" />
        <resource path="assets/themes" prefix="themes" />
        <resource path="assets/locales" prefix="locales" />
        <resource path="src/fakedata" prefix="src/fakedata" />
        <resource path="src/views" prefix="src/views" />
        <resource path="src/views/fakeemployeeapp" prefix="src/views/fakeemployeeapp" unless="hxwidgets"/>
        <resource path="src/windows" prefix="src/windows" unless="hxwidgets"/>
        <resource path="src/custom" prefix="src/custom" unless="hxwidgets" />
    </resources>

    <components>
        <component package="custom" />
    </components>
    
    <scriptlets>
        <import class="util.Logger" static="true" />
    </scriptlets>
    
    <themes>
        <default>
            <style resource="themes/default/main.css" />
        </default>
    </themes>

    <locales>
        <locale id="en">
            <resource path="locales/en.properties" />
        </locale>
        <locale id="en_US">
            <resource path="locales/en_US.properties" />
        </locale>
        <locale id="ru">
            <resource path="locales/ru.properties" />
        </locale>
        <locale id="fr">
            <resource path="locales/fr.properties" />
        </locale>
        <locale id="pl">
            <resource path="locales/pl.properties" />
        </locale>
        <locale id="cy">
            <resource path="locales/cy.properties" />
        </locale>
    </locales>

    <!--
    <namespaces>
        <namespace prefix="explorer" uri="uri::haxeui::explorer" />
    </namespaces>
    -->
</module>

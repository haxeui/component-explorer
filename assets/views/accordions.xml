                        </tableview>
                    </vbox>   
                </accordion>
            </hbox>
        </vbox>
        
        <vbox width="200">
            <section-header text="Options" />
            <checkbox text="Disable" onchange="ac1.disabled = this.selected" />
        </vbox>
    </hbox>     

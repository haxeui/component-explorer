<vbox width="100%">
    <hbox width="100%">
        <vbox width="100%">
            <section-header text="Demo Graph"  unless="hxWidgets"/>
            <demo-graph width="520" height="420" />  
        </vbox>    

        <vbox>
            <section-header text="Olympic Rings" />
            <canvas width="110" height="50" horizontalAlign="center">
                <data>
                    <!-- draw olympic rings (badly) -->
                    <fill-style color="none" alpha="0" />
                    <!-- blue ring -->
                    <stroke-style color="#407ec9" thickness="3" />
                    <circle x="20" y="20" radius="14" />
                    <!-- black ring -->
                    <stroke-style color="#000000" thickness="3" />
                    <circle x="55" y="20" radius="14" />
                    <!-- red ring -->
                    <stroke-style color="#d8414f" thickness="3" />
                    <circle x="90" y="20" radius="14" />
                    <!-- yellow ring -->
                    <stroke-style color="#efb730" thickness="3" />
                    <circle x="38" y="30" radius="14" />
                    <!-- green ring -->
                    <stroke-style color="#4ea74f" thickness="3" />
                    <circle x="73" y="30" radius="14" />
                </data>
            </canvas>
            
            <section-header text="Animated Color Table" unless="hxWidgets"/>
            <color-table width="180" height="100" unless="hxWidgets"/>
            
            <section-header text="Random Noise" />
            <grid columns="7">
                <noise width="20" height="20" />
                <noise width="20" height="20" />
                <noise width="20" height="20" />
                <noise width="20" height="20" />
                <noise width="20" height="20" />
                <noise width="20" height="20" />
                <noise width="20" height="20" />
                
                <noise width="20" height="20" />
                <noise width="20" height="20" />
                <noise width="20" height="20" />
                <noise width="20" height="20" />
                <noise width="20" height="20" />
                <noise width="20" height="20" />
                <noise width="20" height="20" />
            </grid>
            
            <section-header text="Mini Graph" />
            <mini-graph width="180" height="20" />
            
        </vbox>    
    </hbox>
</vbox>
<?xml version="1.0" encoding="utf-8" ?>
<vbox>
    <section-header text="Default Images" />
    
    <hbox style="spacing: 0;">
        <vbox style="spacing: 0;">
            <image resource="haxeui-core/styles/default/haxeui.png" style="border:1px solid $normal-border-color" />
            <image resource="http://haxeui.org/img/logo_small.png" style="border:1px solid $normal-border-color" width="100%" unless="hxWidgets"/>
            <image resource="haxeui-core/styles/default/haxeui.png" style="border:1px solid $normal-border-color" disabled="true" />
        </vbox>    
        <image resource="haxeui-core/styles/default/haxeui.png" width="200" height="200" style="border:1px solid $normal-border-color" />
        <image resource="haxeui-core/styles/default/haxeui.png" width="100" height="200" style="border:1px solid $normal-border-color" />
        <image resource="haxeui-core/styles/default/haxeui.png" width="100" height="200" scaleMode="fitwidth" style="border:1px solid $normal-border-color" />
        <vbox style="spacing: 0">
            <image resource="haxeui-core/styles/default/haxeui.png" width="200" height="100" scaleMode="fitheight" style="border:1px solid $normal-border-color" />
            <image resource="haxeui-core/styles/default/haxeui.png" width="200" height="100" style="border:1px solid $normal-border-color" />
        </vbox>    
    </hbox>
    
    <section-header text="Scaled Images" />
    <hbox unless="hxWidgets">
        <vbox>
            <image resource="haxeui-core/styles/default/haxeui.png" style="border:1px solid $normal-border-color" imageScale="2" />
            <label text="smooth" horizontalAlign="center" />
        </vbox>    
        <vbox>
            <image resource="haxeui-core/styles/default/haxeui.png" style="border:1px solid $normal-border-color;image-rendering: pixelated;" imageScale="2" />
            <label text="pixelated" horizontalAlign="center" />
        </vbox>    
    </hbox>
</vbox>
<?xml version="1.0" encoding="utf-8" ?>
<vbox width="100%" styleName="default-background">
    <hbox width="100%" >
        <vbox width="100%">
            <section-header text="TabView" />
            <grid>
                <!--  top tabview -->
                <tabview id="tv1" width="240" height="100">
                    <box text="Page" icon="haxeui-core/styles/default/haxeui_tiny.png">
                        <button text="Page 1" />
                    </box>
                    <box text="Page" icon="haxeui-core/styles/default/haxeui_tiny.png">
                        <button text="Page 2" />
                    </box>
                    <box text="Page" icon="haxeui-core/styles/default/haxeui_tiny.png" disabled="true">
                        <button text="Page 3" />
                    </box>
                </tabview>
                
                <tabview id="tv2" width="240" height="100">
                    <box text="Page 1" icon="haxeui-core/styles/default/haxeui_tiny.png">
                        <button text="Page 1" />
                    </box>
                    <box text="Page 2" icon="haxeui-core/styles/default/haxeui_tiny.png">
                        <button text="Page 2" />
                    </box>
                    <box text="Page 3" icon="haxeui-core/styles/default/haxeui_tiny.png">
                        <button text="Page 3" />
                    </box>
                    <box text="Page 4" icon="haxeui-core/styles/default/haxeui_tiny.png">
                        <button text="Page 4" />
                    </box>
                </tabview>
                
                <!-- bottom tabview -->
                <tabview id="tv3" width="240" height="100" tabPosition="bottom">
                    <box text="Page" icon="haxeui-core/styles/default/haxeui_tiny.png">
                        <button text="Page 1" />
                    </box>
                    <box text="Page" icon="haxeui-core/styles/default/haxeui_tiny.png">
                        <button text="Page 2" />
                    </box>
                    <box text="Page" icon="haxeui-core/styles/default/haxeui_tiny.png" disabled="true">
                        <button text="Page 3" />
                    </box>
                </tabview>
                
                <tabview id="tv4" width="240" height="100" tabPosition="bottom">
                    <box text="Page 1" icon="haxeui-core/styles/default/haxeui_tiny.png">
                        <button text="Page 1" />
                    </box>
                    <box text="Page 2" icon="haxeui-core/styles/default/haxeui_tiny.png">
                        <button text="Page 2" />
                    </box>
                    <box text="Page 3" icon="haxeui-core/styles/default/haxeui_tiny.png">
                        <button text="Page 3" />
                    </box>
                    <box text="Page 4" icon="haxeui-core/styles/default/haxeui_tiny.png">
                        <button text="Page 4" />
                    </box>
                </tabview>
            </grid>    
        </vbox>
        
        <vbox width="200">
            <section-header text="Options" />
            <checkbox text="Disable" onchange="tv1.disabled = tv2.disabled = tv3.disabled = tv4.disabled = this.selected" />
        </vbox>
    </hbox>     

    <spacer height="10" />
    
    <hbox width="100%" >
        <vbox width="100%">
            <section-header text="Closable Tabs" />
            <hbox>
                <tabview id="tv5" width="400" height="100" closable="true">
                    <box text="Haxe" icon="icons/logo-haxe.png" />
                    <box text="Java" icon="icons/logo-java.png" />
                    <box text="Javascript" icon="icons/logo-javascript.png" disabled="true" />
                    <box text="C++" icon="icons/logo-cpp.png" />
                    <box text="PHP" icon="icons/logo-php.png" />
                    <box text="C#" icon="icons/logo-cs.png" />
                    <box text="F#" icon="icons/logo-fs.png" />
                    <box text="OCaml" icon="icons/logo-ocaml.png" />
                    <box text="Assembler" icon="icons/logo-asm.png" />
                </tabview>
            </hbox>
        </vbox>
        
        <vbox width="200">
            <section-header text="Options" />
            <checkbox text="Disable" onchange="tv5.disabled = this.selected" />
        </vbox>
    </hbox>     
    
    <spacer height="10" />
    
    <hbox width="100%">
        <vbox width="100%">
            <section-header text="Collapsible Labels" />
            <hbox>
                <tabview id="tv6" width="400" height="100" styleName="collapsible-labels">
                    <box text="Haxe" icon="icons/logo-haxe.png" />
                    <box text="Java" icon="icons/logo-java.png" />
                    <box text="Javascript" icon="icons/logo-javascript.png" disabled="true" />
                    <box text="C++" icon="icons/logo-cpp.png" />
                    <box text="PHP" icon="icons/logo-php.png" />
                    <box text="C#" icon="icons/logo-cs.png" />
                    <box text="F#" icon="icons/logo-fs.png" />
                    <box text="OCaml" icon="icons/logo-ocaml.png" />
                    <box text="Assembler" icon="icons/logo-asm.png" />
                </tabview>
            </hbox>
        </vbox>
        
        <vbox width="200">
            <section-header text="Options" />
            <checkbox text="Disable" onchange="tv6.disabled = this.selected" />
        </vbox>
    </hbox>     
    
    <spacer height="10" />
    
    <hbox width="100%">
        <vbox width="100%">
            <section-header text="Full Width Buttons" />
            <hbox>
                <tabview id="tv7" width="400" height="100" styleName="full-width-buttons">
                    <box text="Haxe" icon="icons/logo-haxe.png" />
                    <box text="Java" icon="icons/logo-java.png" />
                    <box text="Javascript" icon="icons/logo-javascript.png" disabled="true" />
                </tabview>
            </hbox>
        </vbox>
        
        <vbox width="200">
            <section-header text="Options" />
            <checkbox text="Disable" onchange="tv7.disabled = this.selected" />
        </vbox>
    </hbox>     
    
    <spacer height="10" />
    
    <hbox width="100%" unless="hxWidgets">
        <vbox width="100%">
            <section-header text="TabBar" />
            <grid>
                <!-- top tabbar -->
                <tabbar id="tb1" width="240">
                    <button text="Item 1" icon="haxeui-core/styles/default/haxeui_tiny.png" />
                </tabbar>
                
                <tabbar id="tb2" width="240">
                    <button text="Item 1" icon="haxeui-core/styles/default/haxeui_tiny.png" />
                    <button text="Item 2" icon="haxeui-core/styles/default/haxeui_tiny.png" disabled="true" />
                    <button text="Item 3" icon="haxeui-core/styles/default/haxeui_tiny.png" />
                    <button text="Item 4" icon="haxeui-core/styles/default/haxeui_tiny.png" />
                </tabbar>

                <!-- bottom tabbar -->
                <tabbar id="tb3" width="240" tabPosition="bottom">
                    <button text="Item 1" icon="haxeui-core/styles/default/haxeui_tiny.png" />
                </tabbar>
                
                <tabbar id="tb4" width="240" tabPosition="bottom">
                    <button text="Item 1" icon="haxeui-core/styles/default/haxeui_tiny.png" />
                    <button text="Item 2" icon="haxeui-core/styles/default/haxeui_tiny.png" disabled="true" />
                    <button text="Item 3" icon="haxeui-core/styles/default/haxeui_tiny.png" />
                    <button text="Item 4" icon="haxeui-core/styles/default/haxeui_tiny.png" />
                </tabbar>
            </grid>
        </vbox>
        
        <vbox width="200">
            <section-header text="Options" />
            <checkbox text="Disable" onchange="tb1.disabled = tb2.disabled = tb3.disabled = tb4.disabled = this.selected" />
        </vbox>
    </hbox>     
</vbox>